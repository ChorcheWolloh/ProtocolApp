<MainPage>:
    canvas.before:
        Rectangle:
            source:'HDD2.png'
            size: root.width, root.height
            pos: self.pos
    Image:
        source: 'Bohrt2.png'
        size: self.texture_size
        pos_hint: {'top':1.3,'center_x':.5}
    #Label:
        #text: 'Protocol App'
        #size_hint: .3,.3
        #pos_hint: {'top':1,'center_x':.5}
    Button:
        text: 'Profile'
        size_hint: .2,.1
        pos_hint:{'top':1,'right':1}
        on_release:
            app.root.current = 'profile'
            root.manager.transition.direction = 'left'

    Button:
        size_hint: .6,.1
        pos_hint:{'center_x':.5,'y':.6}
        text: 'New'
        on_release:
            app.root.current = 'protocolinfo'
            root.manager.transition.direction = 'left'
    BoxLayout:
        orientation: 'vertical'
        pos_hint:{'center_x':.5,'y':.1}
        size_hint: 1, .5
        Label:
            font_size: 20
            size_hint_y: .3
            text: 'Past Protocols'
        RecycleProtocols:
            id: past_protocols
            data: self.data
            viewclass: 'Label'
            RecycleBoxLayout:
                default_size: 1, '25dp'
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
    GridLayout:
        cols: 2
        pos_hint:{'center_x':.5,'y':0}
        size_hint: 1,.085
        Button:
            text: 'Exit'
            on_release: app.stop()
        Button:
            disabled: True
            id: sign_out_btn
            text: 'Sign Out'
            on_release: app.sign_out()
