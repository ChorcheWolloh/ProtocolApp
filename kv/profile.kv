<Profile>:
    canvas.before:
        Rectangle:
            source:'HDD2.png'
            size: root.width, root.height
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 20
            text: 'Your Profile'
        GridLayout:
            cols:2
            Label:
                text: 'Name'
            Label:
                id: name
                text: ''
        GridLayout:
            cols:2
            Label:
                text: 'Drill'
            Label:
                id: drill
                text: ''
        GridLayout:
            cols:2
            Label:
                text: 'Location System'
            Label:
                id: location
                text: ''
        GridLayout:
            cols:2
            Label:
                text: 'Enable Signout'
            CheckBox:
                on_active: app.enable_signout(self.active)

        GridLayout:
            cols:2
            size_hint: 1, .45
            Button:
                text: 'Go Back'
                on_release:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
            Button:
                text: 'Edit'
                on_release:
                    app.update_personal_info()