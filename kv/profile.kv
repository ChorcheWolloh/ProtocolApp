<Profile>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            halign: 'center'
            text: 'Your Profile'
        GridLayout:
            cols:2
            MDLabel:
                halign: 'center'
                text: 'Name'
            MDLabel:
                halign: 'center'
                id: name
                text: ''
        GridLayout:
            cols:2
            MDLabel:
                halign: 'center'
                text: 'Drill'
            MDLabel:
                halign: 'center'
                id: drill
                text: ''
        GridLayout:
            cols:2
            MDLabel:
                halign: 'center'
                text: 'Location System'
            MDLabel:
                halign: 'center'
                id: location
                text: ''
        MDLabel:
            halign: 'center'
            text: ''

    MDRaisedButton:
        size_hint: .2, .062
        pos_hint:{'x':0,'top':.1}
        text: 'Go Back'
        on_release:
            app.root.current = 'main'
            root.manager.transition.direction = 'right'
    MDRaisedButton:
        size_hint: .2, .062
        pos_hint:{'right':1,'top':.1}
        text: 'Edit'
        on_release:
            app.update_personal_info()