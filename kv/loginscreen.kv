<LoginScreen>:
    canvas.before:
        Rectangle:
            source:'HDD2.png'
            size: root.width, root.height
            pos: self.pos
    FloatLayout:
        MDTextFieldRound:
            color_active: app.theme_cls.primary_light
            normal_color: app.theme_cls.primary_dark
            id: login_email
            hint_text: 'Email'
            multiline: False
            size_hint: .7, None
            pos_hint: {'top': .9, "center_x": .5}
        MDTextFieldRound:
            color_active: app.theme_cls.primary_light
            normal_color: app.theme_cls.primary_dark
            id: login_password
            password: True
            hint_text: 'Password'
            multiline: False
            size_hint: .7, None
            pos_hint: {'top': .7, "center_x": .5}
        MDLabel:
            id: login_message
            color: (1,0,0,1)
            size_hint: .8, .1
            pos_hint: {'top': .4, 'right': .9}
        MDRaisedButton:
            size_hint: .8, .1
            pos_hint: {'top': .2, 'right': .9}
            text: '[u]Sign up[/u]'
            markup: True
            on_release:
                app.my_firebase.sign_up(login_email.text, login_password.text)

