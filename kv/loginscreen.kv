<LoginScreen>:
    FloatLayout:
        MDLabel:
            text: 'Please sign in/sign up'
            halign: 'center'
            pos_hint: {'center_y':.9, "center_x": .5}
        MDTextFieldRound:
            color_active: app.theme_cls.primary_light
            normal_color: app.theme_cls.primary_dark
            id: login_email
            hint_text: 'Email'
            multiline: False
            size_hint: .7, None
            pos_hint: {'top': .8, "center_x": .5}
        MDTextFieldRound:
            color_active: app.theme_cls.primary_light
            normal_color: app.theme_cls.primary_dark
            id: login_password
            password: True
            hint_text: 'Password'
            multiline: False
            size_hint: .7, None
            pos_hint: {'top': .7, "center_x": .5}
        MDLabel:
            id: login_message
            color: (1,0,0,1)
            size_hint: .8, .1
            pos_hint: {'top': .4, 'right': .9}
        Image:
            pos_hint:{'center_x':.5,'center_y':.4}
            source: 'HDD2.png'
            size: self.texture_size
        MDRaisedButton:
            size_hint: .4, .1
            pos_hint: {'top': .2, 'center_x':.5}
            text: '[u]Sign up[/u]'
            markup: True
            on_release:
                app.my_firebase.sign_up(login_email.text, login_password.text)

