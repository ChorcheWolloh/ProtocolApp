<ProtocolInfoPage>
    pilot: pilot
    extender: extender
    reamer: reamer
    caula: caula
    additional: additional
    canvas.before:
        Rectangle:
            source:'HDD2.png'
            size: root.width, root.height
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 20
            text: 'Client'
        GridLayout:
            cols:3
            size: 50,50
            ToggleButton:
                id: mup
                group: 'client'
                text: 'MUP'
                on_press: root.update_client_object(self.text)
            ToggleButton:
                id: olaf
                group: 'client'
                text: 'Olaf Sitte'
                on_press: root.update_client_object(self.text)
            ToggleButton:
                id: fnb
                group: 'client'
                text: 'FNB'
                on_press: root.update_client_object(self.text)
        Label:
            font_size: 20
            text: 'Type of Work'
        GridLayout:
            cols:2
            ToggleButton:
                id: open
                group: 'type'
                text: 'digging'
                on_press:
                    root.choose_open_type()
                    root.collected_info['Work'] = 'Open digging'
            ToggleButton:
                id: drilling
                group: 'type'
                text: 'drilling'
                on_press:
                    root.choose_drill_type()
                    root.collected_info['Work'] = 'Drilling'
        Spinner:
            id: object_dropdown
            size_hint: 1, 1
            text: 'Choose Object'
            #height: dp(40)
            sync_height: True
            values: root.olaf
            on_text:
                root.collected_info['Object'] = object_dropdown.text
        GridLayout:
            cols:2
            Label:
                text: 'Pilot Drill'
            TextInput:
                id: pilot
                multiline: False
                input_filter: 'int'
        GridLayout:
            cols:2
            Label:
                text: 'Extender'
            TextInput:
                id: extender
                multiline: False
                input_filter: 'int'
        GridLayout:
            cols:2
            Label:
                text: 'Reamer'
            TextInput:
                id: reamer
                multiline: False
                input_filter: 'int'
        FloatLayout:
            Label:
                pos_hint: {'right': .75, 'y': .2}
                size_hint: 1, 1
                text: 'Liners'
            Label:
                pos_hint: {'right': 1, 'y': .05}
                size_hint_y: 1
                size_hint_x: .5
                text_size: self.width, None
                height: self.texture_size[1]
                id: info
            GridLayout:
                pos_hint: {'right': .5, 'top': .5}
                size_hint: .5, .5
                cols:2
                ToggleButton:
                    id: big_liners
                    text: '4x20'
                    on_state: root.select_option(self)

                ToggleButton:
                    id: small_liners
                    text: '8x10'
                    on_state: root.select_option(self)
        GridLayout:
            cols:2
            ToggleButton:
                id: caula_btn
                text: 'Caula/Casing'
                on_state: root.caula_button_toggle(self)
            TextInput:
                id: caula
                disabled: not root.casing_enabled
                multiline: False
                input_filter: 'int'
        GridLayout:
            cols:2
            Label:
                text: 'Additional Info'
            TextInput:
                id:additional
        GridLayout:
            cols:2
            Button:
                text: 'Go Back'
                on_release:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
            Button:
                text: 'Confirm'
                on_release:
                    app.root.current = 'drillinginfo'
                    root.collect_info()